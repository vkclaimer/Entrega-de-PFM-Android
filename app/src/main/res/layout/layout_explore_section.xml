<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/box_section_explore_beverages"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/iw_section"
        android:src="@drawable/ic_section_beverages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.app.daintybox.customviews.TextViewCustom
        android:id="@+id/tw_section_name"
        android:text="Beverages"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:fontName="semibold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>